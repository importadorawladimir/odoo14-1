<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_bank_noteslier_filter" model="ir.ui.view">
          <field name="name">ek.bank.notes</field>
          <field name="model">ek.bank.notes</field>
          <field name="type">search</field>
          <field name="arch" type="xml">
            <search string="Buscar Notas Bancarias">
              <group col='8' colspan='4' string="Filtros" >
                <filter icon="terp-document-new" name="dstate" string="Borrador" domain="[('state','=','draft')]" help="Notas en Borrador"/>
                <filter icon="terp-camera_test" name="cstate" string="Confirmados" domain="[('state','=','confirmed')]" help="Notas Confirmadas"/>
                <separator orientation="vertical"/>
                <filter icon="terp-document-new" name="tndb" string="Notas de Débito" domain="[('type','=','ndb')]" />
                <filter icon="terp-camera_test" name="tncb" string="Notas de Crédito" domain="[('type','=','ncb')]"/>
                <separator orientation="vertical"/>
                <field name="date"/>
                <field name="name"/>
                  <field name="journal_id" domain="[('type','in',('bank'))]"/>
                   <field name="reference"/>
              </group>
              <group expand="0" string="Agrupar por..." colspan="4" col="10">
                <filter string="Banco/Cuenta" name="terp-folder-orange" domain="[]" context="{'group_by':'journal_id'}"/>
                <filter string="Estado" name="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                <filter string="Tipo" name="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'type'}"/>
                <filter string="Operación" name="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'operations_id'}"/>
              </group>
            </search>
          </field>
        </record>

    <record model="ir.ui.view" id="view_bank_notes_form">
      <field name="name">ek.bank.notes.form</field>
      <field name="model">ek.bank.notes</field>
      <field name="arch" type="xml">
        <form string="Egresos">
          <header>
            <button name="action_confirmed" string="Validar" states="draft" class="oe_highlight" type="object"/>
            <button name="action_cancel" string="Cancelar Documento" states="draft" type="object"/>
            <button name="action_cancel" string="Cancelar Documento" type="object" states="confirmed" confirm="Seguro de cancelar el documento?"/>
            <button name="action_cancel_draft" type="object" states="canceled" string="Volver a Borrador"/>
            <field name="state" widget="statusbar"/>
          </header>
          <sheet string="Documento Bancario">
            <h1><label for="name" string="Documento Bancario"/> <field name="name" class="oe_inline" readonly="1"/></h1>
            <group>
              <group>
                <field name="type"  required="1" />
                <field name="operations_id" required="1"/>
                <field name="reference" placeholder="Por ejemplo,  NC/0042" string="Referencia de Documento"/>
                  <field name="company_id" widget="selection" groups="base.group_multi_company"/>
               </group>
              <group>
			    <field name="journal_id" domain="[('type','in',['bank'])]" widget="selection" groups="account.group_account_user"/>
                <field name="date"/>
                <field name="move_id" attrs="{'invisible': [('move_id', '=', False)]}" readonly="1"/>
              </group>
            </group>
            <notebook>
              <page string="Detalle del Documento">
				<field name="bank_notes_lines_ids" required="1">
                  <tree string="Detalle" editable="bottom">
                    <field name="account_id"/>
                    <field name="name"/>
                    <field name="amount" sum="Total"/>
                    <field name="account_analytic_id" groups="analytic.group_analytic_accounting" optional="hide"/>
                  </tree>
                </field>
                <group>
                  <field name="notes" placeholder="Notas Internas" nolabel="1"/>
                  <group class="oe_subtotal_footer oe_right">
                    <div class="oe_subtotal_footer_separator">
                      <label for="amount_total"/>
                      <!--<button type="object" class="oe_link oe_edit_only" name="compute_amount_total" string="(Actualizar)" attrs="{'invisible': [('state','!=','draft')]}"/>-->
                     </div>
                    <field name="amount_total" class="oe_subtotal_footer_separator" nolabel="1"/>
                  </group>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

       <record id="view_bank_noteslier_tree" model="ir.ui.view">
            <field name="name">view.name.ek.bank.notes.tree</field>
            <field name="model">ek.bank.notes</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Notas Bancarias">
                    <field name="name"/>
                    <field name="journal_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="type"/>
                    <field name="operations_id"/>
                    <field name="date"/>
                    <field name="amount_total" sum="Total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

    <record id="action_bank_notes" model="ir.actions.act_window">
      <field name="name">Notas Bancarias</field>
      <field name="res_model">ek.bank.notes</field>
     <field name="view_mode">tree,form</field>
      <field name="domain">[('journal_id.type','in',['bank'])]</field>
      <field name="view_id" ref="view_bank_noteslier_tree"/>

        <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Pulse aquí para añadir un nuevo documento
              </p><p>
               Use esta opción preferiblemente para realizar notas de débitos y créditos bancarios
              </p>
            </field>
    </record>

    <menuitem action="action_bank_notes" sequence="14"
              id="menu_action_bank_notes"   parent="account.menu_finance_entries_accounting_miscellaneous"/>



    </data>
</odoo>