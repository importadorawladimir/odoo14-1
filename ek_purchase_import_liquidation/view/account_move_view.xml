<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_invoice_liquidation_filter" model="ir.ui.view">
        <field name="name">account.move.select</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="import_liquidation_id"/>
                <field name="terms_id"/>
            </field>
            <group>
                <filter string="Importaci贸n" name="liquidation_id" domain="[('import_liquidation_id','!=',False)]" context="{'group_by':'import_liquidation_id'}"/>
                <filter string="Terminos de Importaci贸n" name="terms_id" domain="[('import_liquidation_id','!=',False)]" context="{'group_by':'terms_id'}"/>
            </group>
        </field>
    </record>

    <record id="view_account_move_invoice_liquidation_filter" model="ir.ui.view">
        <field name="name">account.move.filter</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="import_liquidation_id"/>
                <field name="terms_id"/>
            </field>
            <group>
                <filter string="Importaci贸n" name="liquidation_id" domain="[('import_liquidation_id','!=',False)]" context="{'group_by':'import_liquidation_id'}"/>
                <filter string="Terminos de Importaci贸n" name="terms_id" domain="[('import_liquidation_id','!=',False)]" context="{'group_by':'terms_id'}"/>
            </group>
        </field>
    </record>

    <record id="view_move_liquidation_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
             <xpath expr="//page[@name='other_info']" position="inside">
				<group string="Importaciones">
					<field name="import_liquidation_id"
                    attrs="{'invisible': [('move_type', '!=', 'in_invoice')], 'readonly': [('state', '=', 'posted')]}"
                    domain="[('state', 'in', ('draft','calculate')),('type','=','liquidation')]" options="{'no_open': True, 'no_create': True}"/>

                <field name="terms_id"
                    attrs="{'invisible': [('move_type', '!=', 'in_invoice')], 'readonly': [('state', '=', 'posted')], 'required': [('import_liquidation_id', '!=', False)]}"
                    options="{'no_open': True, 'no_create': True}"/>
				</group>
			</xpath>

        </field>
    </record>

</odoo>
