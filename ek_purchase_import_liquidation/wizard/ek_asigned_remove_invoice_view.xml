<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_ek_asigned_remove_invoice_wizard" model="ir.ui.view">
            <field name="name">ek.asigned.remove.invoice.wizard</field>
            <field name="model">ek.asigned.remove.invoice</field>
            <field name="arch" type="xml">
                <form string="Genrar Facturas">
                    <group>
                        <field name="invoice_id" domain="[('state','=','draft')]" attrs="{'invisible':[('type','=','del')],'required':[('type','!=','del')]}"/>
