<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_payment_wizard_view_form" model="ir.ui.view">
        <field name="name">ek.account.payment.wizard.form</field>
        <field name="model">ek.account.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="_form">
                <sheet>
                    <group>
                        <group>
                            <field name="journal_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="print_report" string="Descargar" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


     <record id="action_account_payment_wizard_view_form" model="ir.actions.act_window">
      <field name="name">Reporte Bancario Detallado</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">ek.account.payment.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>
</odoo>
